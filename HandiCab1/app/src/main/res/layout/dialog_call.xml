<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="210dp" android:orientation="vertical">


    <RadioGroup
        android:id="@+id/dialog_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/dialog_radio_easy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="간편콜"
            android:textSize="30sp"
            android:checked="true"
            android:button="@drawable/selector_radio"
            android:layout_gravity="center"/>
        <RadioButton
            android:id="@+id/dialog_radio_detail"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="세부콜"
            android:textSize="30sp"
            android:button="@drawable/selector_radio"
            android:layout_gravity="center"
            />
    </RadioGroup>
    <Button
        android:id="@+id/dialog_okbutton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="확인"
        android:layout_marginTop="10dp"
        android:background="@color/main"
        android:textColor="@color/white"
        android:textSize="30sp"/>
</LinearLayout>